---
import { Head } from 'astro-capo';

import BaseHead from '../components/BaseHead.astro';
import CodeCopy from '../components/CodeCopy.astro';
import Footer from '../components/Footer.astro';
import NavBar from '../components/NavBar.astro';
import SmoothScroll from '../components/SmoothScroll.astro';
import '../styles/global.css';

const { title, description, ogImage, permalink } = Astro.props;
---

<html lang="en">
    <Head>
        <BaseHead title={title} description={description} ogImage={ogImage} permalink={permalink} />
    </Head>

    <body class="bg-background dark:bg-background-dark flex min-h-screen flex-col pb-24">
        <main>
            <slot />
        </main>

        <CodeCopy />
        <SmoothScroll />
        <Footer />
    </body>
</html>
