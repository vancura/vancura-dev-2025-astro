---
const navigationItems = [
    { name: 'Home', href: '/' },
    { name: 'Design', href: '/design' },
    { name: 'Development', href: '/development' },
    { name: 'Photography', href: '/photography' },
    { name: 'Illustration', href: '/illustration' }
];

const socialLinks = [
    { name: 'LinkedIn', href: 'https://www.linkedin.com/in/vaclav-vancura/', external: true },
    { name: 'GitHub', href: 'https://github.com/vancura', external: true },
    { name: 'Mastodon', href: 'https://mastodon.design/@vancura', external: true }
];
---

<footer
    aria-label="Page Footer"
    class="w-full border-t border-ui-border bg-background dark:border-ui-border-dark dark:bg-background-dark"
>
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-8 md:gap-12">
            <div class="flex flex-col gap-1">
                <span class="text-text-muted dark:text-text-muted-dark">Václav Vančura</span>
                <span class="text-text-muted dark:text-text-muted-dark"
                    >Accessible Product Design<br class="md:hidden" /> and Implementation</span
                >
            </div>

            <div class="flex flex-col gap-8 sm:flex-row sm:justify-between">
                <nav aria-label="Footer Menu" class="flex flex-col gap-4 sm:flex-row sm:gap-8">
                    {
                        navigationItems.map((item) => (
                            <a
                                href={item.href}
                                class="text-text-muted transition-colors duration-200 hover:text-primary dark:text-text-muted-dark dark:hover:text-primary-dark"
                            >
                                {item.name}
                            </a>
                        ))
                    }
                </nav>

                <nav aria-label="Social Links" class="flex flex-col gap-4 sm:flex-row sm:gap-8">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.href}
                                class="text-text-muted transition-colors duration-200 hover:text-primary dark:text-text-muted-dark dark:hover:text-primary-dark"
                                {...(link.external ? { target: '_blank', rel: 'noopener' } : {})}
                            >
                                {link.name}
                            </a>
                        ))
                    }
                </nav>
            </div>
        </div>
    </div>
</footer>
